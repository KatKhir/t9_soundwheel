  "“Min kreativitet sprudler. Tak!“",
];
---

<style>
  .reviews-container {
    display: flex;
    gap: 2rem;
    overflow-x: auto;
    margin-top: 4rem;
  }

  .review-box {
    max-width: 250px;
    height: 250px;
    padding: 30px;
    background: #605454;
    color: white;
    flex-shrink: 0;
    font-size: 1rem;
    line-height: 1.45;
    font-family: "Heebo", sans-serif;
  }

  @media (min-width: 800px) {
    .review-box {
      max-width: 300px;
    }

    .reviews-container {
      gap: 3rem;
      margin-top: 6rem;
    }
  }

  .tegn_section {
    display: flex;
    gap: 2px;
    justify-content: center;
  }

  .tegn {
    width: 15px;
    height: auto;
    display: block;
  }
</style>

<div class="reviews-container">
  {
    reviews.map((text) => (
      <div class="review-box">
        {text}
        <div class="tegn_section">
          <img class="tegn" src="/img/Comma.webp" alt="quote icon" />
          <img class="tegn" src="/img/Comma.webp" alt="quote icon" />
        </div>
      </div>
    ))
  }
</div>
