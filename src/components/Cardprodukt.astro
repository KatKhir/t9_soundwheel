---
import Button from "../components/Button.astro";

export interface Props {
  title: string;
  text: string;
  Buttonlabel: string;
  imageSrc: string;
  imageAlt?: string;
}

const { title, text, Buttonlabel, imageSrc, imageAlt } = Astro.props;
---

<div class="card">
  <h2>{title}</h2>
  <p>{text}</p>
  <Button label={Buttonlabel} />

  <!-- Added proper class so CSS applies -->
  <img class="card-image" src={imageSrc} alt={imageAlt || title} />
</div>

<style>
  .card {
    background-color: #7d969b;
    max-width: 800px;
    line-height: 2.2rem;
  }

  .card h2 {
    color: white;
    margin-bottom: 10px;
    font-size: 1.5rem;
    margin: 0 auto;
    margin: 0% 10% 5% 10%;
    padding-top: 10%;
  }

  .card p {
    color: black;
    margin-bottom: 15px;
    font-size: 1rem;
    margin: 0 10% 0 10%;
  }

  .card-image {
    width: 100%;
    max-width: 100%;
    height: auto;
    display: block;
    margin-top: 20px;
  }
</style>
